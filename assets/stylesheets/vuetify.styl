$body-font-family = Roboto, "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
$font-size-root = 1rem
$line-height-root = 1.5

$heading-font-family = $body-font-family
$headings = {
  h1: {
    size: 2.5rem,
    weight: 300,
    line-height: 1.1,
    letter-spacing: normal,
    font-family: $heading-font-family
  },
  h2: {
    size: 2rem,
    weight: 300,
    line-height: 1.15,
    letter-spacing: normal,
    font-family: $heading-font-family
  },
  h3: {
    size: 1.75rem,
    weight: 300,
    line-height: 1.2,
    letter-spacing: normal,
    font-family: $heading-font-family
  },
  h4: {
    size: 1.5rem,
    weight: 300,
    line-height: 1.25,
    letter-spacing: normal,
    font-family: $heading-font-family
  },
  h5: {
    size: 1.25rem,
    weight: 400,
    line-height: 1.5,
    letter-spacing: normal,
    font-family: $heading-font-family
  },
  h6: {
    size: 1rem,
    weight: 500,
    line-height: 1,
    letter-spacing: .02em,
    font-family: $heading-font-family
  },
  subheading: {
    size: .875rem,
    weight: 400
  },
  caption: {
    size: .75rem,
    weight: 400
  },
  button: {
    size: 1rem,
    weight: 400
  },
  body-1: {
    size: 1rem,
    weight: 400
  },
  body-2: {
    size: 1rem,
    weight: 500
  }
}

$grid-gutter = .5rem
$spacer = 1rem

@require '~vuetify/src/stylus/app.styl'
